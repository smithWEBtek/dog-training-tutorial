<% if tutorial.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(tutorial.errors.count, "error") %>
      prohibited this post from being saved:
    </h2>

    <ul>
    <% tutorial.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<div class="container">
  <div class="panel panel-default">
    <div class="panel-heading">
      <%= form_for tutorial do |f| %>
      <%# form_for knows that an empty, unsaved model object needs a new form and a populated object needs an edit form %>
        <%= f.label :title %><br>
        <%= f.text_field :title %><br>

        <%= f.label :content %><br>
        <%= f.text_area :content, :rows => 10, style: 'width:100%;' %><br>

        <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>
