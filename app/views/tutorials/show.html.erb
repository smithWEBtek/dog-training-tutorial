<h1><%= @tutorial.title%></h1>

<%= @tutorial.content %>

<h2>Comments</h2>
<%= render @tutorial.comments %>

<h2>Add a comment:</h2>
<%= render partial: "comments/form", locals: { comment: @comment, tutorial: @tutorial } %>

<%= link_to "Edit", edit_tutorial_path(@tutorial) %>

<%= link_to "Delete", @tutorial, method: :delete, data: { confirm: "Are you sure you want to delete this tutorial?"} %>
